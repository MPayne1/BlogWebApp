
@model Coursework1.Models.AddCommentVM


@{
    ViewData["Title"] = "Add Comment";
}

<h2>Add Comment</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Comment" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CommentMessage" class="control-label"></label>
                <input asp-for="CommentMessage" class="form-control" />
                <span asp-validation-for="CommentMessage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Posts</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}