@model IEnumerable<Coursework1.Models.Comment>

@{
    ViewData["Title"] = "Comments";
}

<h2>Comments</h2>

<p> 
    <a asp-controller="PostModels" asp-action="AddComment" asp-route-id="@ViewData["PostId"]">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CommentMessage)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CommentMessage)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        } 
    </tbody>
</table>

<a asp-action="Index">Back to Posts</a>
